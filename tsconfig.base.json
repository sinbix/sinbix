{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sinbix/common": ["packages/common/src/index.ts"],
      "@sinbix/common/testing": ["packages/common/testing"],
      "@sinbix/cli": ["packages/cli/src/index.ts"],
      "@sinbix/cli/*": ["packages/cli/*"],
      "@sinbix/core": ["packages/core/src/index.ts"],
      "@sinbix/core/*": ["packages/core/*"],
      "@sinbix/node": ["packages/node/src/index.ts"],
      "@sinbix/plugin": ["packages/plugin/src/index.ts"],
      "@sinbix/plugin/testing": ["packages/plugin/testing"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
