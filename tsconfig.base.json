{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sinbix/common": ["packages/plugins/common/src/index.ts"],
      "@sinbix/cli": ["packages/sinbix/cli/src/index.ts"],
      "@sinbix/cli/*": ["packages/sinbix/cli/*"],
      "@sinbix/core": ["packages/sinbix/core/src/index.ts"],
      "@sinbix/core/*": ["packages/sinbix/core/*"],
      "@sinbix/utils": ["packages/sinbix/utils/src/index.ts"],
      "@sinbix/node": ["packages/plugins/node/src/index.ts"],
      "@sinbix/plugin": ["packages/plugins/plugin/src/index.ts"],
      "@sinbix/plugin/testing": ["packages/plugins/plugin/testing"],
      "@sinbix-common/utils": ["packages/common/utils/src/index.ts"],
      "@sinbix/sinbix/sinbix": ["packages/sinbix/sinbix/src/index.ts"],
      "@sinbix/web": ["packages/plugins/web/src/index.ts"],
      "@sinbix/nest": ["packages/plugins/nest/src/index.ts"],
      "@sinbix/angular": ["packages/plugins/angular/src/index.ts"],
      "@sinbix/xplat": ["packages/plugins/xplat/src/index.ts"],
      "@sinbix/apps/deps-graph/interfaces": [
        "packages/apps/deps-graph/interfaces/src/index.ts"
      ],
      "@sinbix/apps/deps-graph/features": [
        "packages/apps/deps-graph/features/src/index.ts"
      ],
      "@sinbix/apps/deps-graph/ui": [
        "packages/apps/deps-graph/ui/src/index.ts"
      ],
      "@sinbix/apps/deps-graph/data-access": [
        "packages/apps/deps-graph/data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
